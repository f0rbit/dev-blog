    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: var(--input-background);
    border: 2px solid var(--input-border);
    font-weight: 600;
    font-size: 1rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .step h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .step p {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .step-divider {
    width: 3rem;
    height: 2px;
    background: var(--input-border);
    margin-top: 1.25rem;
    flex-shrink: 0;
  }

  /* API Section */
  .landing-api {
    padding: 4rem 2rem;
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
  }

  .api-steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .api-step {
    border: 1px solid var(--input-border);
    border-radius: 4px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .api-step__code {
    flex: 1;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 120px;
    background: oklch(0.18 0.01 285);
  }

  .api-step__code code {
    font-family: "SF Mono", "Fira Code", "Consolas", monospace;
    font-size: 0.875rem;
    color: var(--text-primary);
  }

  .api-step__code pre {
    margin: 0;
    text-align: left;
  }

  .api-step__code pre code {
    line-height: 1.5;
  }

  .api-step__code--render {
    padding: 1.5rem 2rem;
  }

  .terminal-prompt {
    color: var(--text-muted);
    margin-right: 0.5rem;
  }

  .render-preview {
    width: 100%;
    max-width: 140px;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0.75rem;
    border: 1px solid var(--input-border);
    border-radius: 4px;
    background: var(--bg-primary);
  }

  .render-line {
    height: 8px;
    background: var(--input-border);
    border-radius: 2px;
  }

  .render-line--title {
    width: 70%;
    height: 10px;
    margin-bottom: 0.25rem;
  }

  .render-line--short {
    width: 40%;
  }

  .render-line--medium {
    width: 60%;
  }

  .render-line--long {
    width: 85%;
  }

  .api-step__label {
    padding: 0.75rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-muted);
    border-top: 1px solid var(--input-border);
    background: var(--background-primary);
  }

  .api-tagline {
    font-size: 0.9375rem;
    color: var(--text-muted);
  }

  /* Bottom CTA */
  .landing-cta {
    text-align: center;
    padding: 5rem 2rem;
    background: transparent;
    border-top: 1px solid var(--input-border);
    margin-top: 2rem;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .landing-cta h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
