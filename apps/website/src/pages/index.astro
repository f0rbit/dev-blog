    color: var(--text-muted);
  }

  .feature-card h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .feature-card p {
    font-size: 0.875rem;
    color: var(--text-muted);
    line-height: 1.5;
  }

  /* Steps */
  .landing-steps {
    padding: 4rem 2rem;
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 3rem;
    color: var(--text-primary);
  }

  .steps-grid {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 1rem;
    flex-wrap: wrap;
  }

