    padding: 2rem;
    text-align: center;
    color: var(--text-muted);
    font-size: 0.875rem;
    margin-top: auto;
    width: 100%;
    box-sizing: border-box;
  }

  .landing-footer a {
    color: var(--text-muted);
    text-decoration: none;
  }

  .landing-footer a:hover {
    color: var(--text-primary);
  }

  .footer-divider {
    margin: 0 0.75rem;
    opacity: 0.5;
  }

