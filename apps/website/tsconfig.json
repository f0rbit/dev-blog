{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@blog/api": ["../../packages/api/src/index.ts"],
			"@blog/api/*": ["../../packages/api/src/*"],
			"@blog/schema": ["../../packages/schema/src/index.ts"],
			"@blog/schema/*": ["../../packages/schema/src/*"]
		}
	},
	"include": ["src/**/*", "astro.config.mjs"],
	"exclude": ["node_modules", "dist"]
}
